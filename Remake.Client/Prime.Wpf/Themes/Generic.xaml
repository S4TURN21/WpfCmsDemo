        <Setter Property="Margin"
                Value="0,0,0,14" />
        <Setter Property="VerticalContentAlignment"
                Value="Top" />
        <Setter Property="UseLayoutRounding"
                Value="True" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <TranslateTransform />
                    <ScaleTransform />
                </TransformGroup>
            </Setter.Value>
        </Setter>
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <TransformGroup>
                    <TranslateTransform />
                    <ScaleTransform />
                </TransformGroup>
            </Setter.Value>
        </Setter>
