    <Style TargetType="{x:Type p:Skeleton}">
        <Setter Property="Background"
                Value="#E2E8F0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type p:Skeleton}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="6"
                            ClipToBounds="True">
                        <Grid x:Name="PART_SkeletonGradient">
                            <Grid.Background>
                                <LinearGradientBrush x:Name="AnimatedBrush"
                                                     StartPoint="0,0.5"
                                                     EndPoint="1,0.5">
                                    <GradientStop Color="#00FFFFFF"
                                                  Offset="0.0"
                                                  x:Name="GradientStop1" />
                                    <GradientStop Color="#66FFFFFF"
                                                  Offset="0.5"
                                                  x:Name="GradientStop2" />
                                    <GradientStop Color="#00FFFFFF"
                                                  Offset="1.0"
                                                  x:Name="GradientStop3" />
                                </LinearGradientBrush>
                            </Grid.Background>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
