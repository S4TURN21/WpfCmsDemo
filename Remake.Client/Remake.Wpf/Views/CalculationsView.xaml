<UserControl x:Class="Remake.Wpf.Views.CalculationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Remake.Wpf.Views"
             xmlns:viewmodels="clr-namespace:Remake.Wpf.ViewModels"
             xmlns:models="clr-namespace:Remake.Wpf.Models"
             xmlns:p="clr-namespace:Prime.Wpf;assembly=Prime.Wpf"
             mc:Ignorable="d"
             d:FontFamily="Inter"
             d:FontSize="14"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="#FFFFFF"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:CalculationsViewModel}}">
    <Grid>
        <Border Background="#FFFFFF"
                BorderBrush="#E9ECEF"
                BorderThickness="1,1,1,1"
                CornerRadius="12"
                SnapsToDevicePixels="True"
                Padding="28">
            <Grid>
                <DataGrid AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Style="{StaticResource DataTable}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наименование"
                                            Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Номер"
                                            Binding="{Binding Number}" />
                        <DataGridTextColumn Header="Регион"
                                            Binding="{Binding Region}" />
                        <DataGridTextColumn Header="Итог"
                                            Binding="{Binding TotalAmount}" />
                    </DataGrid.Columns>

                    <models:Calculation Name="СОП154"
                                        Number="0819300027821000209"
                                        Region="Москва"
                                        TotalAmount="140320.0" />
                    <models:Calculation Name="СОП155"
                                        Number="0819300027821000210"
                                        Region="Москва"
                                        TotalAmount="156130.0" />
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
