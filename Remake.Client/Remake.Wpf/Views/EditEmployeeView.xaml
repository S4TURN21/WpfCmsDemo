<UserControl x:Class="Remake.Wpf.Views.EditEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Remake.Wpf.Views"
             xmlns:viewmodels="clr-namespace:Remake.Wpf.ViewModels"
             mc:Ignorable="d"
             Width="720"
             d:FontSize="14"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:EditEmployeeViewModel}}">
    <Border Margin="21"
            Background="#FFFFFF"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="Изменить Сотрудника"
                           Margin="28,21"
                           FontSize="17.5"
                           FontWeight="Bold"
                           Foreground="#374151" />
            </Grid>

            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="21,0">
                    
                    <!--#region Фото -->
                    <StackPanel Margin="7,0,7,28">
                        <TextBlock Text="Фото"
                                   Margin="0,0,0,7"
                                   Foreground="#0F172A"
                                   FontWeight="Medium" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Background="#E2E8F0"
                                    CornerRadius="42"
                                    Width="84"
                                    Height="84"
                                    Margin="0,0,28,0">
                                <Grid>
                                    <TextBlock FontSize="42"
                                               Style="{StaticResource PrimeIcon.User}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                    <Image Source="{Binding Image}"
                                           Height="105"
                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                    <Grid.Clip>
                                        <EllipseGeometry Center="42,42"
                                                         RadiusX="42"
                                                         RadiusY="42" />
                                    </Grid.Clip>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center">
                                <Button Command="{Binding FileUploadCommand}"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,7,7"
                                        Style="{StaticResource Prime.Button}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource PrimeIcon.Upload}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,7,0" />
                                        <TextBlock Text="Загрузить фото" />
                                    </StackPanel>
                                </Button>
                                <TextBlock Text="JPG, JPEG or PNG. 1MB max."
                                           VerticalAlignment="Center"
                                           Foreground="#334155"
                                           FontSize="12" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <!--#endregion-->

                    <UniformGrid Rows="1">
                        <StackPanel Margin="7,0">
                            <TextBlock Text="Фамилия*"
                                       Margin="0,0,0,7"
                                       Foreground="#0F172A"
                                       FontWeight="Medium" />
                            <TextBox Text="{Binding LastName}"
                                     Margin="0,0,0,28"
                                     Style="{StaticResource Prime.InputText}" />
                        </StackPanel>
                        <StackPanel Margin="7,0">
                            <TextBlock Text="Имя*"
                                       Margin="0,0,0,7"
                                       Foreground="#0F172A"
                                       FontWeight="Medium" />
                            <TextBox Text="{Binding FirstName}"
                                     Margin="0,0,0,28"
                                     Style="{StaticResource Prime.InputText}" />
                        </StackPanel>
                    </UniformGrid>

                    <StackPanel Margin="7,0">
                        <TextBlock Text="Отчество*"
                                   Margin="0,0,0,7"
                                   Foreground="#0F172A"
                                   FontWeight="Medium" />
                        <TextBox Text="{Binding MiddleName}"
                                 Margin="0,0,0,28"
                                 Style="{StaticResource Prime.InputText}" />
                    </StackPanel>

                    <StackPanel Margin="7,0">
                        <TextBlock Text="Дата рождения"
                                   Margin="0,0,0,7"
                                   Foreground="#0F172A"
                                   FontWeight="Medium" />
                        <TextBox Margin="0,0,0,28"
                                 Style="{StaticResource Prime.InputText}" />
                    </StackPanel>

                    <StackPanel Margin="7,0">
                        <TextBlock Text="Электронная почта"
                                   Margin="0,0,0,7"
                                   Foreground="#0F172A"
                                   FontWeight="Medium" />
                        <TextBox Margin="0,0,0,28"
                                 Style="{StaticResource Prime.InputText}" />
                    </StackPanel>

                    <StackPanel Margin="7,0">
                        <TextBlock Text="Подразделение"
                                   Margin="0,0,0,7"
                                   Foreground="#0F172A"
                                   FontWeight="Medium" />
                        <TextBox Margin="0,0,0,28"
                                 Style="{StaticResource Prime.InputText}" />
                    </StackPanel>

                    <StackPanel Margin="7,0">
                        <TextBlock Text="Должность"
                                   Margin="0,0,0,7"
                                   Foreground="#0F172A"
                                   FontWeight="Medium" />
                        <TextBox Margin="0,0,0,28"
                                 Style="{StaticResource Prime.InputText}" />
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="21">
                    <Button Content="Отмена"
                            Command="{Binding CancelCommand}"
                            IsCancel="True"
                            Margin="7,0"
                            Style="{StaticResource Prime.Button.Outlined}" />
                    <Button Content="Сохранить"
                            Command="{Binding SaveCommand}"
                            Margin="7,0"
                            Style="{StaticResource Prime.Button}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
