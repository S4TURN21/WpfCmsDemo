<UserControl x:Class="Remake.Wpf.Views.ConfirmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Remake.Wpf.Views"
             xmlns:viewmodels="clr-namespace:Remake.Wpf.ViewModels"
             mc:Ignorable="d"
             MinWidth="300"
             MinHeight="200"
             d:DesignWidth="380"
             d:DesignHeight="200"
             d:FontFamily="{StaticResource Inter}"
             d:FontSize="14"
             d:Foreground="#495057"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:ConfirmViewModel}}"
             FocusManager.FocusedElement="{Binding ElementName=cancel}">
    <Border Margin="14"
            Background="#FFFFFF"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <TextBlock Text="{Binding Title}"
                           d:Text="Подтвердите удаление"
                           TextWrapping="Wrap"
                           Margin="21,21"
                           FontSize="17.5"
                           FontWeight="Bold"
                           Foreground="#374151" />
            </Grid>

            <TextBlock Text="{Binding Description}"
                       d:Text="Вы действительно хотите удалить?&#x0a;Отменить это действие будет невозможно."
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       FontWeight="Medium"
                       Margin="21,0" />

            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="14">
                    <Button Content="Да"
                            Command="{Binding ConfirmCommand}"
                            Margin="7,0"
                            Style="{StaticResource Prime.Button}" />
                    <Button x:Name="cancel"
                            Content="Нет"
                            Command="{Binding CancelCommand}"
                            IsCancel="True"
                            Margin="7,0"
                            Style="{StaticResource Prime.Button.Text}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
