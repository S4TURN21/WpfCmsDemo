<Application x:Class="Remake.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Remake.Wpf.Views"
             xmlns:viewmodels="clr-namespace:Remake.Wpf.ViewModels"
             xmlns:p="clr-namespace:Prime.Wpf;assembly=Prime.Wpf">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Prime.Wpf;component/Themes/LaraLightBlue.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="FancyWindow"
                   TargetType="{x:Type Window}">

                <Setter Property="BorderBrush"
                        Value="#E9ECEF" />
                <Setter Property="BorderThickness"
                        Value="1" />

                <Setter Property="WindowChrome.WindowChrome">
                    <Setter.Value>
                        <WindowChrome UseAeroCaptionButtons="False"
                                      CaptionHeight="42" />
                    </Setter.Value>
                </Setter>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Window}">
                            <Grid>
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        RenderOptions.EdgeMode="Unspecified"
                                        SnapsToDevicePixels="True"
                                        Margin="7">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Border Background="#FFFFFF"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0,0,0,1"
                                                Grid.Row="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Grid x:Name="Window"
                                                      Grid.Column="0"
                                                      Background="Transparent">
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="28,7">
                                                        <Image Source="/Resources/favicon2.png"
                                                               Stretch="Uniform"
                                                               HorizontalAlignment="Left"
                                                               Height="21"
                                                               RenderOptions.BitmapScalingMode="Linear"
                                                               Margin="0,0,7,0" />
                                                        <TextBlock Text="{TemplateBinding Title}"
                                                                   FontSize="20"
                                                                   FontWeight="SemiBold" />
                                                    </StackPanel>
                                                </Grid>
                                                <Button Click="Window_Mininmize"
                                                        Grid.Column="1"
                                                        Focusable="False"
                                                        WindowChrome.IsHitTestVisibleInChrome="True"
                                                        p:ButtonAssist.CornerRadius="0"
                                                        Style="{StaticResource Prime.Button.Secondary.Text}">
                                                    <TextBlock Style="{StaticResource PrimeIcon.Minus}" />
                                                </Button>
                                                <Button Click="Window_Maximize"
                                                        Grid.Column="2"
                                                        Focusable="False"
                                                        WindowChrome.IsHitTestVisibleInChrome="True"
                                                        p:ButtonAssist.CornerRadius="0"
                                                        Style="{StaticResource Prime.Button.Secondary.Text}">
                                                    <TextBlock Style="{StaticResource PrimeIcon.Stop}" />
                                                </Button>
                                                <Button Click="Window_Close"
                                                        Grid.Column="3"
                                                        Focusable="False"
                                                        WindowChrome.IsHitTestVisibleInChrome="True"
                                                        p:ButtonAssist.CornerRadius="0">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}"
                                                               BasedOn="{StaticResource Prime.Button.Secondary.Text}">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="#EF4444" />
                                                                    <Setter Property="BorderBrush"
                                                                            Value="#EF4444" />
                                                                    <Setter Property="Foreground"
                                                                            Value="White" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused"
                                                                         Value="True">
                                                                    <Setter Property="p:BoxShadowAssist.BoxShadow"
                                                                            Value="{x:Null}" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <TextBlock Style="{StaticResource PrimeIcon.Times}" />
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          Grid.Row="1" />
                                    </Grid>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="WindowState"
                                         Value="Normal">
                                    <Setter TargetName="border"
                                            Property="Margin"
                                            Value="0" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <!--<Trigger Property="WindowState"
                             Value="Maximized">
                        <Setter Property="WindowChrome.WindowChrome">
                            <Setter.Value>
                                <WindowChrome NonClientFrameEdges="None"
                                              CornerRadius="0"
                                              ResizeBorderThickness="5"
                                              CaptionHeight="37" />
                            </Setter.Value>
                        </Setter>
                    </Trigger>-->
                    <!--
                    <Trigger Property="WindowState"
                                 Value="Normal">
                        <Setter Property="Margin"
                                Value="0" />
                    </Trigger>-->
                </Style.Triggers>
            </Style>

            <DataTemplate DataType="{x:Type viewmodels:EmployeesViewModel}">
                <views:EmployeesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:AddEmployeeViewModel}">
                <views:AddEmployeeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:EditEmployeeViewModel}">
                <views:EditEmployeeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ProjectsViewModel}">
                <views:ProjectsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:TasksViewModel}">
                <views:TasksView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:CalculationsViewModel}">
                <views:CalculationsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ConfirmViewModel}">
                <views:ConfirmView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
